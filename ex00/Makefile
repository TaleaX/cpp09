CC=c++
CPPFLAGS=-Werror -Wextra -Wall -std=c++98
NAME=btc
SRC=main.cpp BitcoinExchange.cpp
OBJ=main.o BitcoinExchange.o
INC=BitcoinExchange.hpp
header=.header

all : $(NAME)

$(NAME) : $(header) $(SRC)
	@$(CC) $(SRC) -o $(NAME)
	@echo "$(GREEN)Done$(RESET)"

